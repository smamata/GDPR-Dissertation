{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "types": ["node", "hardhat"],
    "skipLibCheck": true
  },
  "include": ["hardhat.config.ts", "scripts", "typechain-types", "contracts"],
  "exclude": ["frontend"]
}



